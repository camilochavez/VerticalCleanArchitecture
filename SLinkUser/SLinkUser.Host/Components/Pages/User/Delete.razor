@page "/User/Delete/{id:int}"

@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

@if (user == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>
        <h4>User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @nameof(UserDTO.Id)
            </dt>
            <dd class="col-sm-10">
                @user.Id
            </dd>
            <dt class="col-sm-2">
                @nameof(UserDTO.Name)
            </dt>
            <dd class="col-sm-10">
                @user.Name
            </dd>
            <dt class="col-sm-2">
                @nameof(UserDTO.Username)
            </dt>
            <dd class="col-sm-10">
                @user.Username
            </dd>

        </dl>
    </div>
    <div>
        <button class="btn btn-danger" @onclick="DeleteButtonClick">Delete</button> |
        <a href="/User">Back to List</a>
    </div>
}

@code {

    [Parameter]
    public int id { get; set; }

    private UserDTO? user;

    protected override async Task OnInitializedAsync()
    {
        if (user == null)
            user = await UserClientService.GetUserByIdAsync(id);
    }

    private async void DeleteButtonClick()
    {
        bool result = await UserClientService.DeleteUserByIdAsync(id);
        if (result)
            NavigationManager.NavigateTo("/User");
    }

}
